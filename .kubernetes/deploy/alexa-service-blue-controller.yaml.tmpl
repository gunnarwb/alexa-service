id: alexa-service-blue-controller
kind: ReplicationController
apiVersion: v1beta1
labels:
  name: alexa-service-blue
  version: "$SHORT_COMMIT"
desiredState:
  replicas: 2
  replicaSelector:
    name: alexa-service-blue
    version: "$SHORT_COMMIT"
  podTemplate:
    labels:
      name: alexa-service-blue
      app: alexa-service-blue
      version: "$SHORT_COMMIT"
    desiredState:
      manifest:
        version: v1beta1
        id: alexa-service-blue
        containers:
          - name: alexa-service-blue
            image: octoblu/alexa-service:$SHORT_COMMIT
            ports:
              - containerPort: 80

